@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers</h1>
<a asp-controller="Home" asp-action="Add" class="btn btn-outline-primary">Add a Bowler</a>
<br />
<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Initial</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach(var b in Model)
            {
                <tr>
                    <td>@b.BowlerLastName</td>
                    <td>@b.BowlerFirstName</td>
                    <td>@b.BowlerMiddleInit</td>
                    <td>@b.BowlerAddress</td>
                    <td>@b.BowlerCity</td>
                    <td>@b.BowlerState</td>
                    <td>@b.BowlerZip</td>
                    <td>@b.BowlerPhoneNumber</td>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" class="btn btn-outline-primary">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID" class="btn btn-outline-primary">Delete</a></td>
                </tr>
            }
    </tbody>

</table>



